<% if student_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Cvs</h1>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cvs.each do |cv| %>
      <tr>
        <td><a href='<%=  cv.path %>'><%= "cv of "+cv.student.name %></a></td>   

        <td><%= cv.student.name %></td>
        <% if current_student == cv.student %>
        <td><%= link_to 'Show', cv %></td>
        <td><%= link_to 'Edit', edit_cv_path(cv) %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
<br>


<% unless @students_arr.include? current_student.id %> 
<%= link_to 'New Cv', new_cv_path %>
<% end %>
<% end %>